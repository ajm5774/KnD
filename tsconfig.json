{
  "compilerOptions": {
    "target": "es6",
    "lib": [
      "es2015",
      "es7"
    ],
    "rootDir": "./",
    "outDir": "dist",
    "module": "commonjs",
    "allowJs": true,
    "moduleResolution": "node",
    "strict": true,
    "sourceMap": true,
    "inlineSources": true,
    "types": [
      "node"
    ],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": [
    "src/app.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}